<% include ../partials/header%>

<div class = "container">
    <h1 style="width: 50%; margin:25px auto;">Edit <%=workout.title%></h1>
    <form action = "/log/<%=workout._id%>?_method=PUT" method="POST">
        <div style="width: 50%; margin:25px auto;">
            <div class="form-group">
                <label>Title of Workout</label>
                <input class = "form-control" type = "text" value="<%=workout.title%>" name = "workout[title]"></input>
            </div>
            <div class="form-group">
                <label>Date of Workout</label>
                <input class = "form-control" type = "text" value="<%=workout.date%>" name = "workout[date]"></input>
            </div>
            <div class="form-group">
                <label>Notes</label>
                <input class = "form-control" type = "text" value="<%=workout.notes%>" name = "workout[notes]"></input>
            </div>
            <div class="form-group">
            <button class="btn btn-lrg btn-primary btn-block">Submit!</button>
            </div>
        </div>
    </form>
</div>

<% include ../partials/footer%>