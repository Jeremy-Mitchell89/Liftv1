<% include ../partials/header%>
<div class="container">
    <form action = "/log/<%=log_id%>/move/<%=move._id%>?_method=PUT" method = "POST">
        <div class="addMovementField">
            <div class = "form-group form-inline">
            <input class = "form-control" type = "text" name = "name" value = <%= move.movement%> style="width:50%%; margin-right:10px"></input>
        </div>
            <div class="info">
                <%for(var i = 0; i<move.weight.length; i++){%>
                <div id = <%="editForm"+i%> class = "form-group form-inline">
                    <h3 class = "moveLabel">Weight:</h3>
                    <input id = <%="weight" + i%> class = "form-control" type = "number" name="weight" value = <%= move.weight[i]%> style="width:25%; margin-right:25px"></input>
                    <h3 class = "moveLabel">Reps:</h3>
                    <input id = <%="set" + i%> class = "form-control" type = "number" name="reps" value = <%= move.reps[i]%> style = "width:25%; margin-right:10px"></input>
                    <p class="addSet">+</p>
                    <p class = "editRemoveSet">-</p>
                </div>
                <%}%>
            </div>
            <button class="btn btn-success">Submit</button>
        </div>
    </form>
</div>
<% include ../partials/footer%>