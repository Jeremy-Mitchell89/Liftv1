<% include ../partials/header%>

<div class = "container">
    <h1 style="width: 50%; margin:25px auto;">Edit <%=movement.name%></h1>
    <form action = "/movements/<%=movement._id%>?_method=PUT" method="POST">
        <div style="width: 50%; margin:25px auto;">
            <div class="form-group">
            <input class = "form-control" type = "text" value="<%=movement.name%>" name = "movement[name]"></input>
            </div>
            <div class="form-group">
            <input class = "form-control" type = "text" value="<%=movement.image%>" name = "movement[image]"></input>
            </div>
            <div class="form-group">
            <input class = "form-control" type = "text" value="<%=movement.description%>" name = "movement[description]"></input>
            </div>
            <div class="form-group">
            <input class = "form-control" type = "text" value="<%=movement.bodyPart%>" name = "movement[bodyPart]"></input>
            </div>
            <div class="form-group">
            <button class="btn btn-lrg btn-primary btn-block">Submit!</button>
            </div>
        </div>
    </form>
</div>

<% include ../partials/footer%>